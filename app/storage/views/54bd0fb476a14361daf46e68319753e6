<body>
<div class="container">

<nav class="navbar navbar-inverse">
	<div class="navbar-header">
		<a class="navbar-brand" href="<?php echo URL::to('users'); ?>">user Alert</a>
	</div>
	<ul class="nav navbar-nav">
		<li><a href="<?php echo URL::to('users'); ?>">View All users</a></li>
		<li><a href="<?php echo URL::to('users/create'); ?>">Create a user</a>
	</ul>
</nav>

<h1>Create a user</h1>

<!-- if there are creation errors, they will show here -->
<?php echo HTML::ul($errors->all()); ?>

<?php echo Form::open(array('url' => 'users')); ?>

	<div class="form-group">
		<?php echo Form::label('name', 'Name'); ?>
		<?php echo Form::text('name', Input::old('name'), array('class' => 'form-control')); ?>
	</div>

	<div class="form-group">
		<?php echo Form::label('email', 'Email'); ?>
		<?php echo Form::email('email', Input::old('email'), array('class' => 'form-control')); ?>
	</div>

	<div class="form-group">
		<?php echo Form::label('telephone', 'user Level'); ?>
		<?php echo Form::select('telephone', array('0' => 'Select a Level', '1' => 'Sees Sunlight', '2' => 'Foosball Fanatic', '3' => 'Basement Dweller'), Input::old('telephone'), array('class' => 'form-control')); ?>
	</div>

	<?php echo Form::submit('Create the user!', array('class' => 'btn btn-primary')); ?>

<?php echo Form::close(); ?>

</div>
</body>
